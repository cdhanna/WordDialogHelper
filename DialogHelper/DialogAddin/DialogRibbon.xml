<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="DialogTab" label="Dialog">
        <group id="MyGroup"
               label="Basic"
               >
          <button id="addRuleButton" label="Add Rule"
            screentip="Text" onAction="OnAddRule"
            supertip="Adds a blank rule to the end of the document."/>

          <button id="save" label="Save as JSON"
            screentip="Save" onAction="OnSave"
            supertip="Saves the document as rule JSON."/>

          <button id="validate" label="Validate all Rules"
           screentip="Validate" onAction="OnValidate"
           supertip="Checks all rules to make sure they are valid."/>
          
        </group>
        <group id="HelpGroup" label="About">
          <button id="checkVersion" label="Check Version"
                  screentip="Version" onAction="OnCheckVersion"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

